{
  "files.exclude": {
    "node_modules": true,
    ".next": true,
    "out": true
  },
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    "source.sortImports": "explicit",
    "source.organizeImports": "never",
    "addMissingImports": "explicit"
  }
}
